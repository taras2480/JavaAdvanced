<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ua.lviv.lgs.hbm.xml.Cart" table="cart">
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>

		<property name="total" column="total_cart" type="int" />
		<property name="name" column="name_cart" type="string" />
		
		<set name="items" table="item_cart" inverse="false" lazy="true" fetch="select">
			<key>
				<column name="cart_id" not-null="true"></column>
			</key>
			<many-to-many entity-name="ua.lviv.lgs.hbm.xml.Item">
				<column name="item_id" not-null="true"></column>
			</many-to-many>
		</set>
		

	</class>
</hibernate-mapping>